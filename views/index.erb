<h1>Trains</h1>

<ul>
  <% @trains.each() do |train| %>
    <li> <a href="/trains/<%= train.id() %>"><%= train.name() %></a></li>
  <% end %>
</ul>


<form action='/trains' method='post'>
  <label for="train_name"> Add a new train</label>
  <input id="train_name" name="train_name" type="text">

  <button type='submit'>Add Train</button>
</form>

<ul>
  <% @cities.each() do |city| %>
  <li> <a href="/cities/<%= city.id() %>"><%= city.name() %></a></li>
  <% end %>
</ul>

<form action='/new_cities' method='post'>
  <label for="city_name"> Add a new city</label>
  <input id="city_name" name="city_name" type="text">

  <button type='submit'>Add City</button>
</form>
