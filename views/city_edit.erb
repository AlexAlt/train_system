<h1>Update <%=@city.name()%></h1>


<form action="/cities/<%= @city.id() %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <% if @trains.any?() %>
  <label for="train_id">Select a Train</label>
  <select id='train_id' name='train_id' type='text'>
    <% @trains.each() do |train| %>
    <option value="<%= train.id()%>"> <%= train.name() %> </option>
    <% end %>
  </select>
  <button type="submit">Add Trains</button>
  <% end %>
</form>

<form action="/cities/<%= @city.id()%>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit">Delete City</button>
</form>
